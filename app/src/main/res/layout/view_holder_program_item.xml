<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/ll_base"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp"
        android:background="#eee"
        android:layout_margin="2dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_pic"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:background="@drawable/apl_item"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/iv_pic"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                android:gravity="right"
                android:layout_marginRight="2dp"
                android:layout_marginLeft="2dp">

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="نام برنامه"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:textColor="#555"
                    android:textSize="18sp"/>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="right"
                    android:layout_gravity="right">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="همه ی مراحل"
                        android:layout_gravity="right"
                        android:gravity="right"
                        android:textColor="#2196F3"
                        android:textSize="12sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="مراحل :"
                        android:layout_gravity="right"
                        android:gravity="right"
                        android:textColor="#555"
                        android:textSize="12sp"
                        android:layout_marginLeft="4dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="بازو"
                        android:layout_gravity="right"
                        android:gravity="right"
                        android:textColor="#2196F3"
                        android:textSize="12sp"
                        android:layout_marginLeft="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="هدف اصلی :"
                        android:layout_gravity="right"
                        android:gravity="right"
                        android:textColor="#555"
                        android:textSize="12sp"
                        android:layout_marginLeft="4dp"/>

                </LinearLayout>


            </LinearLayout>


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_arrow_back_blue_500_24dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"/>


        </RelativeLayout>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_margin="4dp">

                    <TextView
                        android:text="12"
                        android:layout_width="70dp"
                        android:layout_height="60dp"
                        android:textSize="20sp"
                        android:textColor="#eee"
                        android:background="#444"
                        android:gravity="center"/>

                    <TextView
                        android:text="تعداد هفته"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="9sp"
                        android:textColor="#555"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_margin="4dp">

                    <TextView
                        android:text="5.5"
                        android:layout_width="70dp"
                        android:layout_height="60dp"
                        android:textSize="20sp"
                        android:textColor="#eee"
                        android:background="#444"
                        android:gravity="center"/>

                    <TextView
                        android:text="میانگین روز در هفته"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="9sp"
                        android:textColor="#555"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_margin="4dp">

                    <TextView
                        android:text="00:48"
                        android:layout_width="70dp"
                        android:layout_height="60dp"
                        android:textSize="20sp"
                        android:textColor="#eee"
                        android:background="#444"
                        android:gravity="center"/>

                    <TextView
                        android:text="میانگین زمان"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="9sp"
                        android:textColor="#555"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_margin="4dp">

                    <TextView
                        android:text="04:27"
                        android:layout_width="70dp"
                        android:layout_height="60dp"
                        android:textSize="20sp"
                        android:textColor="#eee"
                        android:background="#444"
                        android:gravity="center"/>

                    <TextView
                        android:text="مجموع زمان در هفته"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="9sp"
                        android:textColor="#555"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_margin="4dp">

                    <TextView
                        android:text="1:34"
                        android:layout_width="70dp"
                        android:layout_height="60dp"
                        android:textSize="20sp"
                        android:textColor="#eee"
                        android:background="#444"
                        android:gravity="center"/>

                    <TextView
                        android:text="هوازی"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="9sp"
                        android:textColor="#555"/>

                </LinearLayout>


            </LinearLayout>

        </HorizontalScrollView>

    </LinearLayout>

</android.support.v7.widget.CardView>
