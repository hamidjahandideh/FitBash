<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/fragment_dark_background">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/ah_toolbar_down"
        android:padding="7dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="حمید جهاندیده"
                android:gravity="right"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="امروز چهارشنبه 10 آبان"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"/>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="سن : 30"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="هدف عضله سازی"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="اشتراک با دوستان"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/ic_share_white_24dp"
            android:drawablePadding="8dp"
            android:textSize="15sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:layout_marginRight="60dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ترکیب بندی بدن"
            android:gravity="right"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"/>




    </LinearLayout>



<!--

    <RatingBar
        android:layout_width="98dp"
        android:layout_height="98dp"
        style="@style/CustomRatingBar"
        android:max="100"
        android:progress="20"
        android:layout_gravity="center"/>
    &lt;!&ndash;android:indeterminate="false"&ndash;&gt;
-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="7dp">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="30dp"
            android:gravity="right">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="right"
                    android:layout_marginRight="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="وزن"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"
                        android:textSize="11sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="کیلوگرم 70"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"
                        android:textSize="14sp"/>

                </LinearLayout>

                <ImageView
                    android:layout_width="6dp"
                    android:layout_height="match_parent"
                    android:background="#78a3d8"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="right"
                    android:layout_marginRight="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="توده بدون چربی"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"
                        android:textSize="11sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="کیلوگرم 64"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"
                        android:textSize="14sp"/>

                </LinearLayout>

                <ImageView
                    android:layout_width="6dp"
                    android:layout_height="match_parent"
                    android:background="#41a3d2"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="right"
                    android:layout_marginRight="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="چربی بدن"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"
                        android:textSize="11sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="کیلوگرم 7 ( 17 درصد )"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"
                        android:textSize="14sp"/>

                </LinearLayout>

                <ImageView
                    android:layout_width="6dp"
                    android:layout_height="match_parent"
                    android:background="#fff"/>

            </LinearLayout>

        </LinearLayout>



        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <ProgressBar
                android:layout_width="158dp"
                android:layout_height="158dp"
                android:indeterminate="false"
                android:progressDrawable="@drawable/ah_chart_progress_bg"
                style="?android:attr/progressBarStyleHorizontal"
                android:max="100"
                android:progress="60"
                android:layout_gravity="center"/>
            <!--android:background="@drawable/ah_chart_progress_bg_blue"-->

            <ImageView
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:background="@drawable/ah_chart_center_adamak"
                android:layout_gravity="center"/>


        </FrameLayout>


    </LinearLayout>

    <FrameLayout
        android:layout_width="148dp"
        android:layout_height="148dp"
        android:gravity="center"
        android:layout_gravity="center">

        <ProgressBar
            android:id="@+id/p_userstate"
            android:layout_width="148dp"
            android:layout_height="148dp"
            android:indeterminate="false"
            android:progressDrawable="@drawable/ah_btnupdate_progressbar_progress"
            android:background="@drawable/ah_btnupdate_progressbar"
            style="?android:attr/progressBarStyleHorizontal"
            android:max="100"
            android:progress="0"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/update_txtprogressbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="بروز رسانی"
                android:textSize="15sp"
                android:textColor="#555555" />


            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:text="لمس کنید"
                android:textColor="#888888"
                android:textSize="12sp" />


        </LinearLayout>

        <ImageView
            android:id="@+id/img_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:src="@drawable/ah_progress"
            android:layout_gravity="center"/>


        <ImageView
            android:id="@+id/img_fade"
            android:layout_width="148dip"
            android:layout_height="148dip"
            android:src="@drawable/ah_pressed_main"
            android:layout_gravity="center"/>

    </FrameLayout>


</LinearLayout>
