<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nuclearpencil.hj.fitbash">

    <application
        android:name=".app.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".view.activity.HomeActivity"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="portrait"
            android:theme="@style/MaterialDrawerTheme.TranslucentStatus">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".view.activity.RegisterLoginActivity"
            android:theme="@style/MaterialDrawerTheme.TranslucentStatus"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="portrait">

        </activity>
        <activity
            android:name=".view.activity.VideoActivity"
            android:theme="@style/MaterialDrawerTheme.TranslucentStatus" />
        <activity android:name=".view.activity.MusicActivity" />
        <activity android:name=".view.activity.NewWorkoutActivity" />
    </application>

</manifest>